<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_title"
                android:background="#2f2e2f" >

                <TextView
                    android:id="@+id/tv_app_down_title_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/app_download"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16" />

                <ImageView
                    android:id="@+id/iv_view_title_back"
                    android:layout_width="@dimen/size_mille_image_button"
                    android:layout_height="@dimen/size_mille_image_button"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="10dip"
                    android:layout_marginTop="10dip"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/back" />
            </RelativeLayout>
            
            <WebView 
                android:id="@+id/wv_sacn_webview"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                />
</LinearLayout>

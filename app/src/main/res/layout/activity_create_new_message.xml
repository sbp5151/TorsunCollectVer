<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <include
        android:id="@+id/create_message_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_title_height"
        layout="@layout/title_message_center_view"/>

    <RelativeLayout
        android:paddingLeft="@dimen/padding_right_left"
        android:paddingRight="@dimen/padding_right_left"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:scrollbars="none"
            android:id="@+id/create_message_center_list"
            style="@style/style_list_view_base_set"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <View
            android:layout_alignParentBottom="true"
            android:background="@color/graysh"
            android:layout_width="match_parent"
            android:layout_height="1px"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="62dp">

        <TextView
            android:id="@+id/create_message_foot"
            android:layout_centerInParent="true"
            android:textSize="@dimen/title_bar_size"
            android:textColor="@drawable/message_add_item_selector"
            android:text="@string/message_add_image"
            android:layout_width="wrap_content"
            android:enabled="false"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:background="#FFF6C7"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/warn_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="24dp"
        android:src="@mipmap/warn_icon"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@id/warn_icon">

        <TextView
            android:id="@+id/tv_warn_message1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/warn_add_team1"
            android:textColor="#8D8364"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_warn_message2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/warn_add_team1"
            android:textColor="#8D8364"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_warn_message3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/warn_add_team2"
            android:textColor="#8D8364"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_add_warn_delete"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:src="@mipmap/warn_delete" />
</RelativeLayout>
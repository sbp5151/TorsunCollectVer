<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud_red" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/imagev_load_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="125dip"
            android:scaleType="fitCenter"
            android:src="@mipmap/load_text_prompt_chain" />

        <ImageView
            android:layout_marginTop="3dp"
            android:id="@+id/imagev_load_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imagev_load_txt"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            android:src="@mipmap/load_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imagev_load_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dip"
            android:text="@string/wifi_chat"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_21" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imagev_load_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="8dip"
        android:layout_marginTop="8dip"
        android:background="@color/transparent"
        android:src="@mipmap/close_loda" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/img_frame_background"
    android:orientation="horizontal">

    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true" />
    <FrameLayout
        android:layout_width="233dp"
        android:layout_height="37dp"
        android:background="@drawable/shape_corners_4dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        >
        <TextView
            android:id="@+id/tv_location_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="marquee"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:marqueeRepeatLimit="marquee_forever"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:singleLine="true"
            android:textSize="19dp" />
        </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="31dp"
        android:layout_marginRight="17dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_map_icon_1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="28dp"
            android:src="@mipmap/map_icon_1" />

        <ImageView
            android:id="@+id/iv_map_icon_2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="28dp"
            android:src="@mipmap/map_icon_2" />

        <ImageView
            android:id="@+id/iv_map_icon_3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@mipmap/map_icon_3" />
    </LinearLayout>

</RelativeLayout>
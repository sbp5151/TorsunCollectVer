<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <View
        android:background="@drawable/shape_white_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_title_height"/>

    <LinearLayout
        android:id="@+id/ll_register_phone_back"
        android:layout_marginTop="33dp"
        android:layout_gravity="center_vertical"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:scaleType="centerInside"
            android:background="@mipmap/regies_back"
            android:clickable="false" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/back_high"
            android:clickable="false"
            android:gravity="center"
            android:text="@string/regies_back"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/ll_register_phone_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/mobile_hint"
            android:textColor="@color/black"
            android:textSize="@dimen/register_title_size" />

        <TextView
            android:id="@+id/tv_regies_country_code2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/register_et_height"
            android:layout_marginLeft="@dimen/padding_right_left"
            android:layout_marginRight="@dimen/padding_right_left"
            android:layout_marginTop="30dp"
            android:paddingRight="10dp"
            android:clickable="true"
            android:drawableRight="@mipmap/arrow_right"
            android:gravity="center_vertical"
            android:text="@string/regies_code_account"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/padding_right_left"
            android:layout_marginRight="@dimen/padding_right_left"
            android:layout_marginTop="@dimen/line_top_padding"
            android:background="@color/line_gray" />

        <!-- 电话 -->

        <com.jld.torsun.view.MyEditText
            android:id="@+id/et_regies_mobile2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/register_et_height"
            android:layout_marginLeft="@dimen/padding_right_left"
            android:layout_marginRight="@dimen/padding_right_left"
            android:layout_marginTop="@dimen/register_et_mg_top"
            android:background="@null"
            android:drawableRight="@drawable/et_selector_delete"
            android:hint="@string/mobile_hint"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:inputType="phone"
            android:paddingRight="@dimen/delete_padding_right"
            android:textColorHint="@color/light_gray" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/padding_right_left"
            android:layout_marginRight="@dimen/padding_right_left"
            android:layout_marginTop="@dimen/line_top_padding"
            android:background="@color/line_gray" />
        <!-- 密码 -->

        <com.jld.torsun.view.MyEditText
            android:id="@+id/et_regiest_password2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/register_et_height"
            android:layout_marginLeft="@dimen/padding_right_left"
            android:layout_marginRight="@dimen/padding_right_left"
            android:layout_marginTop="@dimen/register_et_mg_top"
            android:background="@null"
            android:drawableRight="@drawable/et_selector_delete"
            android:hint="@string/password_hint"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:inputType="textPassword"
            android:paddingRight="@dimen/delete_padding_right"
            android:textColorHint="@color/light_gray" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/padding_right_left"
            android:layout_marginRight="@dimen/padding_right_left"
            android:layout_marginTop="@dimen/line_top_padding"
            android:background="@color/line_gray" />

        <Button
            android:layout_marginLeft="@dimen/padding_right_left"
            android:layout_marginRight="@dimen/padding_right_left"
            android:id="@+id/bt_regiest_phone_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dip"
            android:background="@drawable/shape_red_button_backgroud"
            android:gravity="center"
            android:paddingBottom="12dip"
            android:paddingTop="12dip"
            android:text="@string/next_step"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_22" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="45dp"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:text="@string/regies_phone_account_1"
        android:textColor="#AAAAAA"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/sp_24"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:text="@string/regies_phone_account_2"
        android:textColor="#AAAAAA"
        android:textSize="@dimen/sp_14" />

</RelativeLayout>
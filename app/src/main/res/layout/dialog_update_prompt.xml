<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true" >

    <LinearLayout
        android:layout_width="@dimen/dialog_width"
        android:layout_height="@dimen/dialog_height"
        android:layout_centerInParent="true"
        android:layout_marginLeft="24dip"
        android:layout_marginTop="24dip"
        android:background="@drawable/shape_dialog_white_bg"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_single_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="4"
            android:gravity="center"
            android:text="@string/t_frag_set_dia_title"
            android:textColor="@color/hint_title"
            android:paddingTop="@dimen/dialog_title_padding_top"
            android:textSize="@dimen/dialog_title_size" />

    <LinearLayout
        android:layout_weight="6"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/tv_update_dialog_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/t_frag_set_update_cont_2"
            android:textColor="@color/item_content_black"
            android:textSize="@dimen/dialog_message_size" />
    </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/button_stroke_colour" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_check_height"
        android:gravity="center"
        android:orientation="vertical" >
        <Button
            android:id="@+id/bt_update_dialog_confirm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/dialog_bottom_shape_pre_bg"
            android:text="@string/FragmentSet_logout_confirm"
            android:textColor="@color/backgroud_red"
            android:textSize="@dimen/dialog_below_size" />

    </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_updete_dialog_close"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@mipmap/close_dialog" />

</RelativeLayout>
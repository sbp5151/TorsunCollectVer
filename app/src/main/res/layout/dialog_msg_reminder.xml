<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true" >

    <RelativeLayout
        android:id="@+id/dialog_msg_ll"
        android:background="@drawable/shape_dialog_white_bg"
        android:layout_width="@dimen/dialog_width"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:paddingTop="65dp"
        android:paddingRight="20dip"
        android:paddingLeft="20dip"
        android:paddingBottom="32dp"
        android:layout_marginTop="90dip">

        <TextView
            android:id="@+id/tv_msg_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="@string/dialog_msg_title"
            android:textColor="@color/black"
            android:textSize="@dimen/dialog_title_size" />

        <TextView
            android:id="@+id/tv_msg_dialog_message"
            android:lineSpacingExtra="5dp"
            android:layout_marginTop="18dp"
            android:layout_below="@id/tv_msg_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dialog_msg_content"
            android:textColor="@color/message_time_text_gray"
            android:textSize="@dimen/dialog_message_size" />

        <Button
            android:id="@+id/bt_msg_dialog_confirm"
            android:layout_below="@id/tv_msg_dialog_message"
            android:paddingTop="10dip"
            android:paddingBottom="10dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_red_frame_backgroud2"
            android:text="@string/dialog_add_trou"
            android:textColor="@color/backgroud_red"
            android:textSize="@dimen/dialog_below_size" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_msg_dialog_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/msg_a" />

</RelativeLayout>
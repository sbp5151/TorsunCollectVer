<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="@dimen/height_item"
    android:background="@drawable/item_check_bg"
    >
    <RelativeLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_item">

        <TextView
            android:layout_marginLeft="4dp"
            android:id="@+id/item_language_text"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="11111"
            android:textColor="@color/item_content_black"
            android:textSize="@dimen/sp_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <CheckBox
            android:enabled="false"
            android:id="@+id/item_language_cb"
            android:button="@null"
            android:layout_marginRight="5dp"
            android:drawableStart="@drawable/selector_checkbox_bg"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:id="@+id/item_language_bottom_view"
            android:layout_alignParentBottom="true"
            android:background="@color/light_gray"
            android:layout_width="match_parent"
            android:layout_height="1px"/>

    </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/guider_second_message_top_view"
        layout="@layout/title_message_center_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_title_height" />


    <com.jld.torsun.view.MyInterceptListView
        android:id="@+id/guider_second_message_list_view"
        style="@style/style_list_view_base_set"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="18dp"
        android:layout_marginLeft="18dp"
        android:descendantFocusability="afterDescendants"
        android:scrollbars="none">

    </com.jld.torsun.view.MyInterceptListView>

</LinearLayout>

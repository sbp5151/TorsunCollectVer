<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#FFDFDF"
    android:layout_height="40dp">

    <ImageView
        android:id="@+id/warn_3g_net_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/warn_icon"/>
    <TextView
        android:id="@+id/warn_3g_net_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/warn_not_network"
        android:layout_centerVertical="true"
        android:layout_marginLeft="22dp"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/black"
        android:layout_toRightOf="@id/warn_3g_net_icon"/>
    <ImageView
        android:visibility="gone"
        android:id="@+id/warn_3g_net_delete"
        android:layout_width="25dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:paddingRight="8dp"
        android:src="@mipmap/warn_delete"/>
</RelativeLayout>
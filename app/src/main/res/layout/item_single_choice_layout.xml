<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="@dimen/height_big_item"
    android:background="@drawable/item_check_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/msg_padding_left_right"
        android:layout_height="@dimen/height_big_item">

        <CheckBox
            android:enabled="false"
            android:id="@+id/item_single_choice_cb"
            android:button="@null"
            android:drawableStart="@drawable/selector_checkbox_bg"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/item_single_choice_iv"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:src="@mipmap/trou_team_list_enable"/>

        <TextView
            android:id="@+id/item_single_choice_name_tv"
            android:singleLine="true"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="11111"
            android:textColor="@color/item_content_black"
            android:textSize="@dimen/sp_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_single_choice_time_tv"
            android:visibility="gone"
            android:paddingRight="@dimen/msg_padding_left_right"
            android:singleLine="true"
            android:text="15.11.2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/item_single_choice_end_iv"
            android:src="@mipmap/dialog_single_choice"
            android:layout_marginRight="@dimen/msg_padding_left_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_alignParentBottom="true"
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

</RelativeLayout>